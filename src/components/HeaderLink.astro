---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<li>
  <a
    class="text-gray-400 dark:text-gray-200 rounded-full px-4 py-1 inline-block hover:bg-teal-100 hover:text-gray-500 transition-colors duration-200 ease-in-out"
    href={href} class:list={[className, { 'bg-primary text-white': isActive }]} {...props}>
    <slot />
  </a>
</li>

